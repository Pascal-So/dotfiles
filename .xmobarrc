Config { 

   -- appearance
     font =         "xft:Bitstream Vera Sans Mono:size=10:bold:antialias=true"
   , bgColor =      "#121212"
   , fgColor =      "#dcdccc"
   , position =     Bottom

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = " %multicpu%  %coretemp%  %memory%  |  %dynnetwork%  |  %StdinReader%}{ %date% || %kbd% "

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- plugins
   --
   --   The --template option controls how the plugin is displayed. Text
   --   color can be set by enclosing in <fc></fc> tags. For more details
   --   see http://projects.haskell.org/xmobar/#system-monitor-plugins.
   , commands = 

        -- network activity monitor (dynamic interface resolution)
        [ Run DynNetwork     [ "--template" , "<dev>: u<tx>kB/s d<rx>kB/s"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#6f6"
                             , "--normal"   , "#fb5"
                             , "--high"     , "#f66"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "<icon=.icons/cpu.xbm/> <total0>/<total1>/<total2>/<total3>/<total4>/<total5>/<total6>/<total7>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "#6f6"
                             , "--normal"   , "#fb5"
                             , "--high"     , "#f66"
                             ] 10

        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "<icon=.icons/temp1.xbm/> <core0>/<core1>/<core2>/<core3>°C"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#6f6"
                             , "--normal"   , "#fb5"
                             , "--high"     , "#f66"
                             ] 50

        -- memory usage monitor
        , Run Memory         [ "--template" ,"<icon=.icons/mem.xbm/> <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "#6f6"
                             , "--normal"   , "#fb5"
                             , "--high"     , "#f66"
                             ] 10

        -- time and date indicator 
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "<fc=#ABABAB>%F (%a) %T (%Z)</fc>" "date" 10

        -- keyboard layout indicator
        , Run Kbd            [ ("gb"    , "<fc=#a7b4e5>GB</fc>")
                             , ("ch"    , "<fc=#d82222>CH</fc>")
                             , ("ru"    , "<fc=#3e7de0>RU</fc>")
                             ] 

        , Run StdinReader
        ]
   }